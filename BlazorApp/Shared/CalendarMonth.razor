<div id="month" name="month" class="container-fluid overflow-hidden">
    <div class="row flex-nowrap">
        @if(Days is not null && DayTemplate is not null)
        {
            foreach (var day in Days)
            {
                @DayTemplate(day)
            }
        }
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment<DateTime>? DayTemplate { get; set; }
    [Parameter]
    public IEnumerable<DateTime>? Days { get; set; }
    [Parameter]
    public EventCallback GoToPreviousWeek { get; set; }
    [Parameter]
    public EventCallback GoToNextWeek { get; set; }
}
