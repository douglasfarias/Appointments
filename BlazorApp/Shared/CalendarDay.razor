@using ClassLibrary.Models
<div id="day" name="day" class="col-sm-3 col-md-3 col-lg-3 col-xl-3 flex-shrink-0 flex-grow-0 px-0">
    <div class="card rounded-0 bg-dark border-secondary">
        <div class="card-header border-secondary">
            <div class="container-fluid p-0">
                <div class="row">
                    <div class="col">
                        <strong>
                            @DayNumberAndName.Key
                        </strong>
                    </div>
                </div>
                <div class="row">
                    <small>@DayNumberAndName.Value</small>
                </div>
            </div>
        </div>
        <div class="card-body">
            @foreach (var appointment in _appointments.OrderBy(item => item.Date.Hour))
            {
                <div class="pb-2">
                    <CalendarEvent Appointment="appointment" Expanded="Expanded"/>
                </div>
            }
        </div>
    </div>
</div>


